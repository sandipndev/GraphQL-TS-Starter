{
  "name": "graphql-ts-starter",
  "version": "0.0.1",
  "description": "A minimal repository with starter code for making a GraphQL API with Express and Mongoose",
  "main": "dist/main.bundle.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --watch --mode development",
    "watch:server": "eval $(cat .env) nodemon \"./dist/main.bundle.js\" --watch \"./dist\"",
    "build": "webpack --config webpack.config.js --mode production",
    "build.prod": "webpack --config webpack.config.js -p",
    "build.esnext": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build.all": "npm run build.prod && npm run build.esnext",
    "test": "karma start karma.config.js"
  },
  "author": "Sandipan Dey",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/jasmine": "3.5.10",
    "@types/joi": "^14.3.4",
    "@types/mongoose": "^5.7.21",
    "@types/node": "14.0.5",
    "awesome-typescript-loader": "5.2.1",
    "jasmine-core": "3.5.0",
    "karma": "5.0.9",
    "karma-jasmine": "3.2.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-webpack": "4.0.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "source-map-loader": "1.0.0",
    "tslint": "6.1.2",
    "tslint-loader": "3.6.0",
    "typescript": "3.9.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0"
  },
  "dependencies": {
    "@types/connect-redis": "^0.0.14",
    "@types/express-session": "^1.17.0",
    "apollo-server-express": "^2.14.0",
    "bcryptjs": "^2.4.3",
    "connect-redis": "^4.0.4",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "joi": "^14.3.1",
    "mongoose": "^5.9.16",
    "redis": "^3.1.1"
  }
}
